source 'https://rubygems.org'
ruby RUBY_VERSION

# This is the gem used to use GitHub's defaults
gem 'github-pages', group: :jekyll_plugins

# This gem is used to poll events from ics links
gem 'jekyll-ical-tag', group: :jekyll_plugins

# This gem creates TOCs
gem 'jekyll-toc', group: :jekyll_plugins

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]

gem 'jekyll-paginate'

# This is the gem used to test the output HTML
group :test do
  gem "rake"
  gem "html-proofer"
end
